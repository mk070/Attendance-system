<%- include('partials/header', { page: 'faculty', user: teacher[0] }) %>

<div class="container-fluid">
    <h1>Edit Faculty</h1>

    <div class="card">
        <div class="card-body">
            <form action="/edit-faculty/<%= teacher[0].id %>" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" name="name" class="form-control" value="<%= teacher[0].name %>" required>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-control" value="<%= teacher[0].username %>" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control">
                    <small class="form-text text-muted">Leave blank to keep the current password.</small>
                </div>
                <button type="submit" class="btn btn-primary">Update Faculty</button>
                <a href="/faculty" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>