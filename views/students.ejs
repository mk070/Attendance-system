<%- include('partials/header', { page: 'students', user: student[0] }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Manage Students</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
            <i class="bi bi-plus-circle me-2"></i>Add Student
        </button>
    </div>

    <% if (typeof addedalert !== 'undefined' && addedalert) { %>
        <div class="alert alert-success" role="alert"><%= addedalert %></div>
    <% } %>
    <% if (typeof updatealert !== 'undefined' && updatealert) { %>
        <div class="alert alert-info" role="alert">Student details have been updated successfully.</div>
    <% } %>
    <% if (typeof deletealert !== 'undefined' && deletealert) { %>
        <div class="alert alert-danger" role="alert">Student has been removed.</div>
    <% } %>

    <div class="card">
        <div class="card-body">
            <form action="/student-search" method="post" class="d-flex mb-3">
                <input type="text" name="search" class="form-control me-2" placeholder="Search students...">
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Reg No</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone Number</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof student !== 'undefined' && student.length > 0) { %>
                            <% student.forEach(s => { %>
                                <tr>
                                    <td><%= s.id %></td>
                                    <td><%= s.regno %></td>
                                    <td><%= s.firstname %></td>
                                    <td><%= s.lastname %></td>
                                    <td><%= s.phoneno %></td>
                                    <td>
                                        <a href="/edit-student/<%= s.id %>" class="btn btn-sm btn-outline-primary me-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                        <a href="/deletestudent/<%= s.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this student?');"><i class="bi bi-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center">No students found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Student Modal -->
<div class="modal fade" id="addStudentModal" tabindex="-1" aria-labelledby="addStudentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addStudentModalLabel">Add New Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/addstudent" method="post">
                    <div class="mb-3">
                        <label for="regno" class="form-label">Register No</label>
                        <input type="text" id="regno" name="regno" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="firstname" class="form-label">First Name</label>
                        <input type="text" id="firstname" name="firstname" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="lastname" class="form-label">Last Name</label>
                        <input type="text" id="lastname" name="lastname" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="phoneno" class="form-label">Phone Number</label>
                        <input type="text" id="phoneno" name="phoneno" class="form-control" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add Student</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>