<%- include('partials/header', { page: 'home', user: (typeof user !== 'undefined') ? user : {} }) %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Home</h1>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5>Academic Year : 2022 - 2023 EVEN SEMESTER</h5>
                </div>
                <div class="col">
                    <h5>Faculty Name : <%= teacher[0].name %></h5>
                </div>
            </div>
            <div class="row">
                <table class="table table-bordered" style="margin-top: 10px; background-color: transparent; border-color:transparent;">
                    <tr>
                        <th>
                            <h5>Year</h5>
                        </th>
                        <th>
                            <h5>Department</h5>
                        </th>
                        <th>
                            <h5>Subject</h5>
                        </th>
                    </tr>
                    <% teacher.forEach(function(teacher) { %>
                    <tr>
                        <td>
                            <%= teacher.year %>
                        </td>
                        <td>
                            <%= teacher.dept %>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <%= teacher.subject %>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="<%= teacher.year_id %>/<%= teacher.dept_id %>/<%= teacher.subject %>/attendance/<%= 1 %>">slot 1</a></li>
                                    <li><a class="dropdown-item" href="<%= teacher.year_id %>/<%= teacher.dept_id %>/<%= teacher.subject %>/attendance/<%= 2 %>">slot 2</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>